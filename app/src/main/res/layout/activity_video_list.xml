<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/theme_dark_top">
        <ImageView
            android:background="@mipmap/nav_icon_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:onClick="goBack"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        <TextView
            android:layout_centerInParent="true"
            android:text="宣传视频"
            android:textSize="@dimen/x15"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_video"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/x50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="VIDEO CENTER"
            android:textColor="@color/colorPrimaryGreen2"
            android:textSize="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="视频中心"
            android:layout_marginTop="@dimen/x15"
            android:textColor="@color/colorPrimaryGreen2"
            android:textSize="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <GridView
            android:id="@+id/gv_video"
            android:numColumns="3"
            android:horizontalSpacing="@dimen/x15"
            android:verticalSpacing="@dimen/x15"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>