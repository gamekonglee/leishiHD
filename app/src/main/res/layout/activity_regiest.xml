<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/green">

            <RelativeLayout
                android:background="@color/colorPrimaryGreen2"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="@dimen/x80"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:onClick="goBack">
                    <ImageView
                        android:id="@+id/topLeftBtn"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x5"
                        android:background="@drawable/goback"

                        android:textColor="#FFFFFF"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x25"
                    android:layout_centerInParent="true"
                    android:text="@string/regiest_code"
                    />

            </RelativeLayout>

    </LinearLayout>
    <bc.otlhd.com.ui.view.TextViewPlus
        android:text="注册会员"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryGreen2"
        android:textStyle="bold"
        android:drawableLeft="@mipmap/icon_register_top"
        app:left_width="@dimen/x54"
        app:left_height="@dimen/x50"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@drawable/bg_corner_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x5"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            >

            <TextView
                android:text="运营中心"
                android:id="@+id/run_iv"
                style="@style/txtDefaultStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/zhuceshouji"/>

            <bc.otlhd.com.ui.view.TextViewPlus
                android:drawableRight="@mipmap/arrow_down"
                app:right_width="25dp"
                app:right_height="25dp"
                android:paddingRight="30dp"
                android:id="@+id/tvRun"
                android:text="请选择运营中心"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/phone_iv"
                android:background="@drawable/bg_corner_e5e5e5_5"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            >

            <TextView
                android:text="门店名称"
                android:id="@+id/pwd_iv"
                style="@style/txtDefaultStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/zhuceshouji"/>

            <EditText
                android:id="@+id/distributorEt"
                style="@style/editPhoneStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/phone_iv"
                android:background="@drawable/bg_corner_e5e5e5_5"
                android:inputType="text"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            >

            <TextView
                android:text="门店地址"
                android:id="@+id/pwd02_iv"
                style="@style/txtDefaultStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/zhuceshouji"/>

            <EditText
                android:id="@+id/addressEv"
                style="@style/editPhoneStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/phone_iv"
                android:background="@drawable/bg_corner_e5e5e5_5"
                android:inputType="text"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            >

            <TextView
                android:text="手机"
                android:id="@+id/phone_iv"
                style="@style/txtDefaultStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/zhuceshouji"/>

            <EditText
                android:id="@+id/edtPhone"
                style="@style/editPhoneStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/phone_iv"
                android:background="@drawable/bg_corner_e5e5e5_5"
                android:inputType="number"/>

        </LinearLayout>


