<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#FFFFFF">
    <RelativeLayout
        android:id="@+id/imageViewRl"
        android:layout_width="@dimen/x120"
        android:layout_height="wrap_content"
        android:background="@color/black"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x120"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:src="@drawable/bg_default"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewRl"
        android:text="MS5263电灯泡"
        android:textColor="@color/fontColor2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/x22" />
    <TextView
        android:id="@+id/old_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_tv"
        android:layout_centerHorizontal="true"
        android:text="￥35"
        android:visibility="gone"
        android:textColor="@color/fontColor2"
        android:textSize="@dimen/x20" />
    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/old_price_tv"
        android:layout_toRightOf="@id/imageViewRl"
        android:text="￥30"
        android:textColor="@color/red"
        android:textSize="@dimen/x20"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>
    <Button
        android:id="@+id/set_price_bt"
        android:background="@drawable/button_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="自定义价格"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@id/price_tv"
        android:layout_toRightOf="@id/imageViewRl"

        />
</RelativeLayout>