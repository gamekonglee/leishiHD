<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
    android:id="@+id/main_ll"
              android:background="@mipmap/bg_home"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x70"
        android:minHeight="?attr/actionBarSize"
       >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <LinearLayout
                android:layout_width="@dimen/x235"
                android:layout_height="@dimen/x50"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/x25"
                android:layout_marginRight="@dimen/x80"
                >
                <LinearLayout
                    android:layout_width="@dimen/x230"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/search_et_shap"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:background="@mipmap/icon_search"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_width="@dimen/x16"
                        android:layout_height="@dimen/x16" />
                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_height="@dimen/x40"
                        android:layout_marginRight="@dimen/x5"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/x2"
                        android:paddingLeft="@dimen/x5"
                        android:paddingTop="@dimen/x2"
                        android:textColor="#222222"
                        android:textSize="12sp"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:inputType="text"
                        android:background="@null"
                        android:textColorHint="#999999"
                        android:hint="@string/him_product"
                        android:gravity="start|center_vertical"
                        android:drawablePadding="@dimen/x8"
                        />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/x164"
                android:layout_height="@dimen/x24"
                android:src="@drawable/logo"
                android:layout_marginLeft="@dimen/x80"
                android:layout_marginTop="@dimen/x24"
                />



        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>
    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x80"
        android:layout_marginRight="@dimen/x80"
        android:layout_height="@dimen/x75"
        />
    <RelativeLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        >

        <FrameLayout
            android:id="@+id/top_bar"
            android:layout_marginLeft="@dimen/x80"
            android:layout_marginRight="@dimen/x80"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

</LinearLayout>