<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#e5e5e5"
    android:layout_width="@dimen/x450"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42">
        <ImageView
            android:id="@+id/iv_dismiss"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:background="@mipmap/icon_gb"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/x17" />
        <TextView
            android:text="设置"
            android:textColor="#333333"
            android:textSize="@dimen/x13"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="@dimen/x30"
        android:layout_gravity="center"
        android:layout_width="@dimen/x400"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_white_5"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_current_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45">
            <TextView
                android:text="当前版本"
                android:textSize="@dimen/x13"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_version_name"
                android:textColor="#999999"
                android:textSize="@dimen/x12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/rl_security_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45">
            <TextView
                android:text="高级设置"
                android:textSize="@dimen/x13"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@mipmap/page_icon_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:layout_width="@dimen/x6"
                android:layout_height="@dimen/x11" />
        </RelativeLayout>
        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/rl_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45">
            <TextView
                android:text="清空缓存"
                android:textSize="@dimen/x13"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_cache"
                android:textColor="#999999"
                android:textSize="@dimen/x12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/rl_sgin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45">
            <TextView
                android:text="机器识别码"
                android:textSize="@dimen/x13"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_sgin"
                android:textColor="#999999"
                android:textSize="@dimen/x12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>