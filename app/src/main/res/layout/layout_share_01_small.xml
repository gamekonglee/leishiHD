<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="@dimen/x300"
    android:gravity="center_horizontal"
    android:layout_height="@dimen/x470">
    <ImageView
        android:id="@+id/iv_share_01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x240"
        android:src="@drawable/bg_default"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x30"
        />
    <TextView
        android:text="规格："
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:textColor="#333333"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_attr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/x100"
        android:layout_marginBottom="@dimen/x30"
        android:orientation="horizontal">
         <LinearLayout
             android:layout_width="0dp"
             android:layout_weight="1"
             android:paddingLeft="@dimen/x30"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <TextView
                 android:id="@+id/tv_paramter"
                 android:layout_width="wrap_content"
                 android:divider="@null"
                 android:textColor="#555555"
                 android:textSize="@dimen/x10"
                 android:layout_gravity="center"
                 android:layout_height="wrap_content"/>
             <TextView
                 android:id="@+id/tv_mark_price"
                 android:text=""
                 android:textColor="#555555"
                 android:textSize="@dimen/x10"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
             <TextView
                 android:id="@+id/tv_shop_price"
                 android:text=""
                 android:textColor="@color/colorPrimaryRed"
                 android:textSize="@dimen/x10"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
         </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:layout_centerInParent="true"/>
            <TextView
                android:text="扫一扫，查看详情"
                android:textSize="@dimen/x9"
                android:textColor="#999999"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#f3f3f3">
        <TextView
            android:id="@+id/tv_name_mobile"
            android:textSize="@dimen/x10"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_address"
            android:textSize="@dimen/x10"
            android:textColor="#999999"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>