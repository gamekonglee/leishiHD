<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              android:id="@+id/main_ll"
    >


        <RelativeLayout
            android:background="@color/theme_dark_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45">


                <ImageView
                    android:id="@+id/topLeftBtn"
                    android:onClick="goBack"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/nav_icon_back"
                    android:layout_marginLeft="@dimen/x30"
                   />

            <TextView
                android:id="@+id/et_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/product_detail"
                android:textColor="#ffffff"
                android:textSize="@dimen/x16"
                />
            <LinearLayout
                android:id="@+id/cart_Ll"
                android:layout_width="@dimen/x40"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="@dimen/x40"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/collectIv"
                        android:layout_width="@dimen/x19"
                        android:layout_height="@dimen/x19"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/nav_icon_shop" />
                    <!--<TextView-->
                        <!--android:id="@+id/unMessageReadTv"-->
                        <!--android:layout_width="@dimen/x15"-->
                        <!--android:layout_height="@dimen/x15"-->
                        <!--android:layout_marginLeft="@dimen/x15"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:background="@drawable/bg_unread_count"-->
                        <!--android:visibility="gone"-->
                        <!--android:gravity="center_horizontal"-->
                        <!--android:text="0"-->
                        <!--android:paddingBottom="@dimen/x2"-->
                        <!--android:textSize="@dimen/x11"-->
                        <!--android:textColor="#FFFFFF"-->
                        <!--/>-->
                    <TextView
                        android:id="@+id/unMessageReadTv"
                        android:layout_width="@dimen/x12"
                        android:layout_height="@dimen/x12"
                        android:layout_marginLeft="@dimen/x15"
                        android:visibility="invisible"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x13"
                        android:layout_marginTop="@dimen/x8"
                        android:background="@drawable/bg_unread_count_shape"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        />
                </RelativeLayout>
            </LinearLayout>

            <!--<ImageView-->
                <!--android:id="@+id/share_iv"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_marginRight="@dimen/x20"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:src="@drawable/ic_share"-->
                <!--/>-->
        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <bc.otlhd.com.ui.view.MyScrollView
                android:id="@+id/msv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        android:id="@+id/rl_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        >
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:padding="@dimen/x10"
                            >
                            <com.bigkoo.convenientbanner.ConvenientBanner
                                android:id="@+id/convenientBanner"
                                android:layout_width="@dimen/x460"
                                android:layout_height="@dimen/x350"
                                android:layout_centerHorizontal="true"
                                android:background="@color/white"
                                />
                            <bc.otlhd.com.ui.view.LandLayout02Video
                                android:id="@+id/play"
                                android:visibility="gone"
                                android:background="@color/transparent"
                                android:layout_width="@dimen/x240"
                                android:layout_centerHorizontal="true"
                                android:layout_height="@dimen/x350"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/x10"
                            android:paddingRight="@dimen/x10"
                            android:background="@color/white">
                            <TextView
                                android:id="@+id/name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x10"
                                android:textSize="@dimen/x20"
                                android:layout_marginLeft="@dimen/x10"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/x5"
                                />
                            <View
                                android:layout_marginLeft="@dimen/x10"
                                android:layout_marginRight="@dimen/x10"
                                style="@style/view_style"
                                />
                            <RelativeLayout
                                android:layout_marginLeft="@dimen/x10"
                                android:layout_marginTop="@dimen/x15"
                                android:background="#f3f3f3"
                                android:layout_width="@dimen/x400"
                                android:layout_height="@dimen/x56">
                                <TextView
                                    android:text="价格："
                                    android:textColor="#999999"
                                    android:textSize="@dimen/x13"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/x15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/proPriceTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/x60"
                                    android:layout_marginLeft="@dimen/x74"
                                    android:gravity="center_vertical"
                                    android:textSize="30sp"
                                    android:textColor="@color/red"/>
                            </RelativeLayout>

                            <View
                                style="@style/view_style"
                                android:layout_marginLeft="@dimen/x10"
                                android:layout_marginRight="@dimen/x10"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/x60"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/x10">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="数量:  "
                                    android:textColor="@color/txt_black"
                                    android:layout_marginLeft="@dimen/x10"
                                    android:textSize="@dimen/x20"/>
                                <include
                                    android:layout_marginLeft="@dimen/x15"
                                    android:id="@+id/number_input_et"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/number_input_et"
                                    android:layout_centerVertical="true"
                                    />
                            </LinearLayout>
                            <com.lib.common.hxp.view.ListViewForScrollView
                                android:id="@+id/properties_lv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="none"
                                >

                            </com.lib.common.hxp.view.ListViewForScrollView>
                            <View
                                android:layout_marginTop="@dimen/x10"
                                style="@style/view_style"
                                android:layout_marginLeft="@dimen/x10"
                                android:layout_marginRight="@dimen/x10"
                                />

                            <com.lib.common.hxp.view.GridViewForScrollView
                                android:id="@+id/parameter_lv"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/x400"
                                android:background="@android:color/transparent"
                                android:horizontalSpacing="@dimen/x5"
                                android:numColumns="2"
                                android:scrollbars="none"
                                />

                        </LinearLayout>
                    </LinearLayout>
                    <WebView
                        android:id="@+id/webView"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="@dimen/x150"
                        android:layout_marginRight="@dimen/x150"
                        android:layout_height="fill_parent"
                        android:scrollbars="none"
                        android:scrollbarSize="0dip"
                        />
                </LinearLayout>

            </bc.otlhd.com.ui.view.MyScrollView>
        </LinearLayout>
        <ImageView
            android:id="@+id/top_iv"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:src="@drawable/go_top"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/x20"
            android:visibility="gone"
            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorview" />
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        >

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/callLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="139"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:background="@mipmap/tab_icon_service"
                android:layout_width="@dimen/x21"
                android:layout_height="@dimen/x20" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_service"
                android:layout_marginLeft="@dimen/x2"
                android:textColor="#555555"
                android:textSize="@dimen/x20"/>

        </LinearLayout>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="#dddddd" />
        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="139"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/share_iv"
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x19"
                android:src="@drawable/ic_share"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:layout_marginLeft="@dimen/x2"
                android:textColor="#555555"
                android:textSize="@dimen/x20"/>
        </LinearLayout>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="#dddddd" />
        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="139"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:background="@mipmap/tab_icon_download"
                android:layout_width="@dimen/x19"
                android:layout_height="@dimen/x19" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x2"
                android:textColor="#555555"
                android:textSize="@dimen/x20"
                android:text="下载"/>
        </LinearLayout>

        <View
            android:layout_width="0.1dp"
            android:background="#dddddd"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="139"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:background="@mipmap/tab_icon_notice"
                android:layout_width="@dimen/x19"
                android:layout_height="@dimen/x19" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x2"
                android:textColor="#555555"
                android:textSize="@dimen/x20"
                android:text="到货通知"/>
        </LinearLayout>
        <Button
            android:id="@+id/toDiyBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="202"
            android:background="#fb8818"
            android:text="@string/go_matching"
            android:textSize="@dimen/x20"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/toCartBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="202"
            android:background="@color/colorPrimaryGreen2"
            android:textSize="@dimen/x20"
            android:text="@string/go_shopping_cart"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>