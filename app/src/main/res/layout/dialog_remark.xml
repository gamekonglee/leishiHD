<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="@dimen/x390"
    android:layout_height="match_parent">
<TextView
    android:text="填写商品备注"
    android:textSize="@dimen/x13"
    android:textColor="#333333"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x45" />
    <View
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:text="商品备注："
        android:textColor="#333333"
        android:textSize="@dimen/x14"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/x10"
        android:paddingTop="@dimen/x5"
        android:hint="填写商品备注"
        android:textColorHint="#999999"
        android:textColor="#666666"
        android:textSize="@dimen/x13"
        android:gravity="left|top"
        android:background="@drawable/bg_corner_dddddd_5"
        android:layout_margin="@dimen/x15"
        android:layout_height="@dimen/x90" />
    <TextView
        android:text="安装位置"
        android:textColor="#333333"
        android:textSize="@dimen/x14"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <GridView
        android:id="@+id/gv_install"
        android:layout_margin="@dimen/x15"
        android:numColumns="3"
        android:layout_width="match_parent"
        android:horizontalSpacing="@dimen/x10"
        android:verticalSpacing="@dimen/x10"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:text="取消"
            android:textSize="@dimen/x14"
            android:textColor="#ffffff"
            android:background="#999999"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_ensure"
            android:text="确定"
            android:textSize="@dimen/x14"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryGreen2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>